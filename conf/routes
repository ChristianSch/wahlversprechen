# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Detail page
GET		/view/:id					controllers.Application.view(id: Long)
GET		/import/:id					controllers.Application.loadSpreadSheet(id: String)

POST 	/addEntry					controllers.Application.addEntry

# Authentication
GET     /login                              controllers.Application.login
POST    /login                              controllers.Application.authenticate
GET     /logout                             controllers.Application.logout

# Load Test
GET /loaderio-1d023df4783a421bb574cfc64791a5c4/	controllers.Application.loader_io

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
