@(title: String, url: String, entries: List[Entry])

<?xml version="1.0"?>
<rss version="2.0">
   <channel>
      <title>@title</title>
      <link>@url</link>
      <description></description>
      <language>de-DE</language>
      <pubDate>@{new java.util.Date().toString()}</pubDate>
      <docs>http://blogs.law.harvard.edu/tech/rss</docs>
      <generator>Generated using Play Framework 2.1</generator>
      <managingEditor>mail@@@Formatter.url</managingEditor>
      <webMaster>mail@@@Formatter.url</webMaster>
      @for(entry <- entries) {
         <item>
            <title>@{Xml( Formatter.transformFirstLineToHTML(entry.content).body )}</title>
            <link>http://@Formatter.url/view/@entry.stmt_id#@entry.id</link>
            <description>@{Xml( Formatter.transformToHTML(entry.content).body )}</description>
            <pubDate>@entry.date.toString</pubDate>
            <guid>http://@Formatter.url/view/@entry.stmt_id#@entry.id</guid>
         </item>
      }
   </channel>
</rss>